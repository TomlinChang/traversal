<h1 class='text-primary mt-3'> <%= @equation.title %></h1>
<p text-small> via Jupyter Notebooks 🐍 </p>

<ul data-controller='jupyter-renders'>
  <% @equation.steps.each_with_index do |step, index| %>
  <li>
    <p> <span class="indexnumber pr-3"> <%= index + 1 %> </span>
      <span class="step"> <%= step.latex %></span>
    </p>
  </li>
  <% end %>
</ul>
